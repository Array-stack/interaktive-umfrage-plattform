# ====================================
# Umfrage-Plattform - Produktionskonfiguration
# ====================================

# Umgebungsmodus
# ----------------------------
NODE_ENV=production

# ===== SMTP-Konfiguration =====
# ----------------------------
# Gmail SMTP-Konfiguration

# SMTP-Server
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false  # false für STARTTLS (Port 587)

# SMTP-Authentifizierung
SMTP_USER=tournoishop7@gmail.com   # Ihre Gmail-Adresse
SMTP_PASS=zash jnkm pdlv fvlb   # Ihr generiertes App-Passwort

# Erweiterte SMTP-Optionen
SMTP_SERVICE=gmail
SMTP_IGNORE_TLS=false
SMTP_REQUIRE_TLS=true

# Verbindungs-Optionen
SMTP_POOL=true
SMTP_MAX_CONNECTIONS=5
SMTP_MAX_MESSAGES=100

# ===== E-Mail-Absender =====
# ----------------------------
EMAIL_FROM_NAME="Umfrage-Plattform"
EMAIL_FROM_ADDRESS=tournoishop7@gmail.com   # Sollte mit SMTP_USER übereinstimmen

# ===== Anwendungskonfiguration =====
# ----------------------------
# Basis-URL für Links in E-Mails
APP_URL=https://interaktive-umfrage-plattform.vercel.app

# Port, auf dem der Server laufen soll
PORT=3001
 
# Datenbank-Konfiguration
DATABASE_URL=./database.sqlite

# JWT Secret (für Produktion ändern!)
